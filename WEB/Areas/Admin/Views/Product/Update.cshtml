@model Product
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_DasboardLayout.cshtml";
}


<div class="row">
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Product Update</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form method="post">
                <div class="card-body">
                    <div class="form-group">
                        <label>Product Name</label>
                        <input asp-for="ProductName" type="text" class="form-control" placeholder="Enter product name" value="@Model.ProductName">
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <input asp-for="Description" type="text" class="form-control" placeholder="Enter product description" value="@Model.Description">
                    </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Update Product</button>
                </div>
            </form>
        </div>
        <!-- /.card -->

    </div>
</div>

